{
  "version": 2,
  "builds": [
    {
      "src": "Backend/src/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "Frontend/dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "Backend/src/app.js" },
    { "src": "/assets/(.*)", "dest": "/Frontend/dist/assets/$1" },
    { "src": "/(.*)", "dest": "/Frontend/dist/index.html" }
  ]
}